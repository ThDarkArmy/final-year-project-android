<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewAddHoliday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/ss"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/logo"
            />
        <TextView
            android:id="@+id/TextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:text="Update Fee"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15pt">
        </TextView>
        <TextView
            android:id="@+id/studentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="CLASS"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/std"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Class"
            android:textSize="25dp"
            android:inputType="text"
            >

        </EditText>
        <TextView
            android:id="@+id/textadmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Admission Fee"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/admission_fee"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Admission Fee"
            android:textSize="25dp"
            android:inputType="date"
            >
        </EditText>
        <TextView
            android:id="@+id/texttutuion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Tution Fee"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/tuition_fee"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Tuition Fee"
            android:textSize="25dp"
            android:inputType="text"
            >
        </EditText>
        <EditText
            android:id="@+id/exam_fee"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Exam Fee"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:gravity="top"
            >
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UPDATE FEE"
                android:id="@+id/edit_fee"
                android:layout_centerHorizontal="true"
                android:background="#8CE68A"
                android:paddingTop="0dp"
                android:textSize="20dp"
                android:layout_marginTop="2dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FEE LIST"
                android:id="@+id/view_fee_list"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"
                android:layout_marginLeft="4dp"
                android:paddingTop="0dp"
                android:textSize="20dp"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        <!--Put form controls here-->

    </LinearLayout>
</ScrollView>