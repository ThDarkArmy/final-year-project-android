<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".activities.holiday.HolidayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fee Payment"
            android:textColor="#ffffff"
            android:elevation="10dp"
            android:padding="50px"
            android:textSize="70px"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:background="#8BC34A"
            android:id="@+id/header"
            ></TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#5c5d5e" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studentname"
            android:text="NAME"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            ></TextView>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:text="Name"
            android:textSize="25dp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#5c5d5e" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/texttutuion"
            android:text="Tution Fee"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            ></TextView>

        <TextView
            android:id="@+id/tuition_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:text="Tuition Fee"
            android:textSize="25dp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#5c5d5e" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textexam"
            android:text="Exam Fee"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            ></TextView>

        <TextView
            android:id="@+id/exam_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Exam Fee"
            android:textSize="25dp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#5c5d5e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textadmission"
            android:text="Admission Fee"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            ></TextView>

        <TextView
            android:id="@+id/admission_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Admission Fee"
            android:textSize="25dp"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#5c5d5e" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total"
            android:text="TOTAL FEE"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            ></TextView>

        <TextView
            android:id="@+id/total_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:text="Total Fee"
            android:textSize="25dp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#5c5d5e" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonpay"
            android:text="Pay"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textStyle="bold"
            ></com.google.android.material.button.MaterialButton>

    </LinearLayout>

</ScrollView>